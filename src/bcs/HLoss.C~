#include "HLoss.h"

template<>
InputParameters validParams<HLoss>()
{
  InputParameters params = validParams<IntegratedBC>();

  // Here we are adding a parameter that will be extracted from the input file by the Parser
  params.addRequiredParam<Real>("alpha","Coefficient of conduction");
  return params;
}

HLoss::HLoss(const std::string & name, InputParameters parameters) :
    IntegratedBC(name,parameters),
    _alpha(getParam<Real>("alpha"))
{}

Real
HLoss::computeQpResidual()
{
  return alpha*_u[_qp]*_test[_i][_qp];
}
